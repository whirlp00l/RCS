div(id="admin" flex layout="vertical" layout-fill)

  div.text-unselectable(layout="horizontal" layout-align="center" layout-padding)
    .pane.material-whiteframe-z3
      h3.text-center 当前管理员
      div(ng-repeat="adminRow in adminRows track by $index" layout="horizontal" layout-align="center")
        .admin(ng-repeat="admin in adminRow" layout="vertical" layout-align="center center")
          material-button.material-button-fab.material-button-raised(
            ng-click="clickRemoveAdmin(admin, $event)")
            sapn.fa.fa-user
          | {{admin.Email}}

      h3.text-center 新增管理员
      material-list(id="newAdmin")
        material-item
          .material-tile-left
            material-button.material-button-raised.material-theme-light(
              ng-disabled="ifDisableAddAdmin()"
              ng-click="clickAddAdmin()")
              i.fa.fa-plus
          .material-tile-content
            .material-input-group.material-input-group-theme-light
              input.full-width(type="text" ng-model="newAdmin" placeholder="用户邮箱")