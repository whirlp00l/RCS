div(ng-controller="tableMapCtrl")
  .row.text-center(ng-if="isLoadingTable==true")
    h2 Loading...
  .row.text-unselectable(ng-if="isLoadingTable==false")
    .row.row-rcs-table(ng-repeat="tableRow in tables track by $index")
      .col-rcs-table(ng-repeat="table in tableRow", ng-class="{'col-xs-2':maxTableCol==6, 'col-xs-1':maxTableCol==12}")
        div(rcs-table)

  //- .row.text-unselectable(ng-controller="tableMapCtrl")
    .col-rcs-table(ng-repeat="table in tables[1]", ng-class="{'col-xs-2':maxTableCol==6, 'col-xs-1':maxTableCol==12}")
      div(rcs-table)